{
  "workbench.startupEditor": "newUntitledFile",
  "workbench.settings.editor": "json",
  "workbench.colorTheme": "GitHub Dark Default",
  "workbench.iconTheme": "symbols",
  "editor.fontSize": 12,
  "window.zoomLevel": 1,

  "editor.fontFamily": "JetbrainsMono NF",
  "terminal.integrated.fontFamily": "JetbrainsMono NF",
  "debug.console.fontFamily": "JetbrainsMono NF",
  "editor.codeLensFontFamily": "JetbrainsMono NF",
  "editor.inlayHints.fontFamily": "JetbrainsMono NF",
  "errorLens.fontFamily": "JetbrainsMono NF",
  "editor.inlineSuggest.fontFamily": "JetbrainsMono NF",
  "scm.inputFontFamily": "JetbrainsMono NF",

  "workbench.sideBar.location": "right",
  "editor.minimap.enabled": false,
  "breadcrumbs.enabled": false,
  "workbench.editor.showTabs": "none",
  "explorer.compactFolders": false,
  "workbench.statusBar.visible": false,
  "window.commandCenter": false,
  "workbench.layoutControl.enabled": false,
  "workbench.editor.editorActionsLocation": "hidden",
  "editor.cursorSmoothCaretAnimation": "on",
  "explorer.confirmDelete": false,
  "workbench.activityBar.location": "hidden",
  // "editor.rulers": [80],

  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.hideCursorInOverviewRuler": true,
  "editor.linkedEditing": true,
  "editor.bracketPairColorization.enabled": true,

  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "always",
    "source.organizeImports": "never"
  },

  // TypeScript
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.suggest.autoImports": true,
  "typescript.autoClosingTags": true,
  "typescript.preferences.importModuleSpecifier": "shortest",

  // Python
  "[python]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "charliermarsh.ruff"
  },

  // Terraform
  "[terraform]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "hashicorp.terraform"
  },

  // GitHub Actions
  "prettier.singleQuote": true,
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Go
  "go.lintTool": "golangci-lint",
  "go.inlayHints.parameterNames": true,
  "go.lintFlags": ["--fast"],
  "go.formatTool": "gofmt",
  "go.toolsManagement.autoUpdate": true,
  "go.vetOnSave": "package",
  "[go]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "golang.go",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always"
    }
  },

  // Git
  "git.confirmSync": false,
  "git.openRepositoryInParentFolders": "always",

  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/package-lock.json": true,
    "**/yarn.lock": true,
    "**/pnpm-lock.yaml": true
  }
}
